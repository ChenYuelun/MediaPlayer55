<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mediaplayer55.MainActivity">

    <include layout="@layout/layout_title" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44000000"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_local_video"
            style="@style/radiobutton"
            android:drawableTop="@drawable/ic_localvideo_selector"
            android:text="本地视频" />

        <RadioButton
            android:id="@+id/rb_local_audio"
            style="@style/radiobutton"
            android:drawableTop="@drawable/ic_localaudio_selector"
            android:text="本地音频" />

        <RadioButton
            android:id="@+id/rb_net_video"
            style="@style/radiobutton"
            android:drawableTop="@drawable/ic_netvideo_selector"
            android:text="网络视频" />

        <RadioButton
            android:id="@+id/rb_net_audio"
            style="@style/radiobutton"
            android:drawableTop="@drawable/ic_netaudio_selector"
            android:text="网络音频" />



    </RadioGroup>


</LinearLayout>
